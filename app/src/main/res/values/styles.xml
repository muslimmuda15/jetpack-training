<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleFormat">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleDetailsFormat">
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DescriptionFormat">
        <item name="android:textSize">@dimen/normal_font</item>
    </style>

    <style name="OverviewFormat">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
        <item name="android:textSize">@dimen/normal_font</item>
    </style>

    <style name="DateFormat">
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
